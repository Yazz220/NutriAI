# Copy this file to ../.env.local (next to scripts folder) and fill the values.
# Paths should be absolute on Windows.

# Supabase project URL
SUPABASE_URL=
# Service Role Key (keep private; do NOT commit)
SUPABASE_SERVICE_ROLE_KEY=

# Storage bucket name for recipe images
BUCKET=recipe-images

# CSV absolute path, e.g. C:\\Users\\Yaz\\Downloads\\Food Ingredients and Recipe Dataset with Image Name Mapping.csv
CSV_PATH=

# If images are already uploaded to Storage, enable NO_UPLOAD and set IMAGE_PREFIX to the folder inside the bucket
NO_UPLOAD=true
# Example prefixes (pick the one matching your upload structure):
# IMAGE_PREFIX=
# IMAGE_PREFIX=Food Images
# IMAGE_PREFIX=kaggle_food_images/v1
IMAGE_PREFIX=

# When NO_UPLOAD=false, set local images directory to upload from
IMAGES_DIR=

# Ingestion source labels (used for idempotency and future swaps)
SOURCE=kaggle_food_images
VERSION=1

# === Optional: AWS S3 Upload Mode ===
# Set USE_S3=true to upload images to S3 instead of Supabase Storage
USE_S3=false
# Required when USE_S3=true
AWS_REGION=us-east-1
S3_BUCKET=
# Credentials for local scripts (do NOT commit real keys)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# Optional CDN base (e.g., your CloudFront domain). If set, final image_url will be `${CDN_BASE}/${key}`
CDN_BASE=
